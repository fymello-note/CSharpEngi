@model List<ProgettoProva.web.Models.User.UserViewModel>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Cognome</th>
            <th>Username</th>
            <th>Password</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ProgettoProva.web.Models.User.UserViewModel user in Model)
        {
            string password = "";
            for(int i = 0; i < user.Password.Length; i++) {
                password += "*";
            }
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>@password</td>
            </tr>
        }
    </tbody>
</table>